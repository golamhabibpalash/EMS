@model EMS.Entity.Event

@{
    ViewData["Title"] = "Event Create";
}
<div class="col-md-12 text-md-center">
    <h4>Create New Event</h4>

</div>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Title" class="control-label col-form-label text-md-right col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Title" class="form-control form-control-sm" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="control-label col-form-label text-md-right col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Description" class="form-control form-control-sm" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="StartTime" class="col-form-label text-md-right col-md-2"></label>
                <div class="col-md-4">
                    <input asp-for="StartTime" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>


                <label asp-for="EndTime" class="control-label col-form-label text-md-right col-md-2"></label>
                <div class="col-md-4">
                    <input asp-for="EndTime" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="LocationId" class="control-label col-form-label text-md-right col-md-2"></label>
                <div class="col-md-10">
                    <select asp-for="LocationId" class="form-control form-control-sm" asp-items="ViewBag.LocationList">
                        <option selected disabled>Select Location</option>
                    </select>
                    <span asp-validation-for="LocationId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-2 col-md-10">
                    <partial name="~/Views/Shared/PartialView/_Create_Back.cshtml" />
                </div>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
